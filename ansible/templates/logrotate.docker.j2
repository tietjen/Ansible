# Docker log rotation configuration for {{ inventory_hostname }}
# Generated by Ansible

/var/lib/docker/containers/*/*.log {
    rotate 7
    daily
    compress
    size=1M
    missingok
    delaycompress
    copytruncate
    notifempty
    create 644 root root
}

/var/log/docker.log {
    rotate 7
    daily
    compress
    size=10M
    missingok
    delaycompress
    notifempty
    create 644 root root
} 