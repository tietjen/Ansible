# Logrotate configuration for {{ inventory_hostname }}
# Generated by Ansible

# Global options
weekly
rotate 4
create
dateext
compress
delaycompress
missingok
notifempty
nomail

# Include additional configurations
include /etc/logrotate.d

# System logs
/var/log/wtmp {
    monthly
    create 0664 root utmp
    rotate 1
}

/var/log/btmp {
    missingok
    monthly
    create 0600 root utmp
    rotate 1
}

# Application logs
/var/log/*.log {
    weekly
    rotate 4
    compress
    delaycompress
    missingok
    notifempty
    create 644 root root
}

# Docker logs
/var/lib/docker/containers/*/*.log {
    rotate 7
    daily
    compress
    size=1M
    missingok
    delaycompress
    copytruncate
} 