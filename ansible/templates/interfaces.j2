# Network interfaces configuration for {{ inventory_hostname }}
# Generated by Ansible

source /etc/network/interfaces.d/*

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
auto {{ network_config.interface }}
iface {{ network_config.interface }} inet static
        address {{ ansible_default_ipv4.address }}
        netmask {{ ansible_default_ipv4.netmask }}
        gateway {{ network_config.gateway }}
        dns-nameservers {% for dns in network_config.dns_servers %}{{ dns }}{% if not loop.last %} {% endif %}{% endfor %}

# Disable IPv6
iface {{ network_config.interface }} inet6 auto
        post-up /sbin/ip -6 addr flush dev {{ network_config.interface }} 